
WindowManager:
	InputWindow:
	OutputWindow:

<Label>
	font_size: dp(20)
	color: [1, 1, 1, 1]
	bold:True
	text_size: self.size
	halign: "left"
	valign: "middle"

<Button>
	font_size: dp(25)
	color: [1, 1, 1, 1]
	bold: True
	background_normal: ""
	background_down: ""
	background_color: [0, 0, 0, 0]
	halign: "center"
	valign: "middle"
	back_color: [0, 0.7, 0, 1]
	canvas.before:
		Color:
			rgba: self.back_color
		RoundedRectangle:
			size: self.size[0], self.size[1]
			pos: self.pos
			radius: [dp(8)]

<ToggleButton>
	text: "X" 
	font_name: "arial-unicode-ms.ttf"
	font_size: dp(20)
	color: [1,1,1,1]
	background_normal: ""
	background_down: ""
	background_color: [0, 0, 0, 0]
	halign: "center"
	valign: "middle"
	back_color: [0.1, 0.12, 0.22, 1]
	canvas.before:
		Color:
			rgba: self.back_color
		RoundedRectangle:
			size: self.size[0], self.size[1]
			pos: self.pos
			radius: [dp(8)]
			
<GridLayout>
	size: root.width, root.height
	#padding[left, top, right, bottom]
	pad_left: dp(10)
	pad_top: dp(0)
	pad_right: dp(10)
	pad_bottom: dp(60) 
	pad_bottom_output_window: dp(15)

<InputWindow>:
	name: 'input'
	GridLayout:
		cols:1
		canvas:
			Color:
				rgba: [0, 0, 0, 1]
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			text: "Invoice Calculator"
			halign: "center"
			size_hint: 1, .55
			font_size: dp(25)
			canvas.before:
				Color:
					rgba: [0.1, 0.12, 0.22, 1]
				Rectangle:
					size: self.size
					pos: self.pos

		GridLayout:
			cols:1
			padding: [self.pad_left, dp(20), self.pad_right, dp(20)]


			TextInput:
				hint_text:'Enter the price:'
				halign: 'center'
				size_hint: 1, 1
				padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
				input_type: 'number'
				font_size: dp(23)
				id: main_price
				multiline: False
				focus: True

		GridLayout:
			cols:4
			spacing: [dp(5), dp(0)]
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom]
			Label:
				text: "How many parts?"
				size_hint: root.width, root.height
			ToggleButton:
				text: "1"
				id: one_part_button
				group: "parts_buttons"
				size_hint: dp(70), root.height
				on_press: root.change_parts_button_state()
			ToggleButton:
				text: "2"
				id: two_parts_button
				group: "parts_buttons"
				size_hint: dp(70), root.height
				on_press: root.change_parts_button_state()
			ToggleButton:
				text: "3"
				id: three_parts_button
				group: "parts_buttons"
				size_hint: dp(70), root.height
				on_press: root.change_parts_button_state()
		
		GridLayout:
			cols: 2
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom]
			Label:
				text: "Repeat customer?"
				size_hint: root.width, root.height
			ToggleButton:
				id: repeat_customer_button
				on_press: root.change_repeat_customer_button_state()
				size_hint: dp(80), root.height
		
		GridLayout:
			cols: 2
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom]
			Label:
				text: "Shipping?"
				size_hint: root.width, root.height
			ToggleButton:
				id: shipping_button
				on_press: root.change_shipping_button_state()
				size_hint: dp(80), root.height

		GridLayout:
			cols:2
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom]
			Label:
				text:"Two workers required?"
				size_hint: root.width, root.height
			ToggleButton:
				id: workers_button
				size_hint: dp(80), root.height
				on_press: root.change_worker_button_state()

		GridLayout:
			cols: 1
			padding: [self.pad_left, self.pad_top, self.pad_right, dp(20)]
			Button:
				text: "Calculate >>"
				id: submit_button
				on_press:
					root.submit()
					root.manager.transition.direction = "left"
					if root.ids.main_price.text != "": app.root.current = 'output'

<OutputWindow>:
	name: 'output'
	gray_color: [.5, .5, .5, 1]
	GridLayout:
		cols:1
		canvas:
			Color:
				rgba: [0, 0, 0, 1]
			Rectangle:
				size: self.size
				pos: self.pos
		GridLayout:
			cols:1
			padding:[0, 0, 0, dp(25)]
			Label:
				text: "Result"
				halign: "center"
				font_size: dp(25)
				canvas.before:
					Color:
						rgba: [0.1, 0.12, 0.22, 1]
					Rectangle:
						size: self.size
						pos: self.pos
		GridLayout:
			cols:1
			id: parts_grid
			size_hint: 0, 0
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				font_size: dp(15)
				id: first_part_label
				size_hint: 0, 0
				color: root.gray_color
			Label:
				font_size: dp(15)
				id: second_part_label
				size_hint: 0, 0
				color: root.gray_color
			Label:
				font_size: dp(15)
				id: third_part_label
				size_hint: 0, 0
				color: root.gray_color
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Total parts cost: not calculated"
				id: total_parts_cost_label
				halign: "left"
				valign: "middle"
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Tax: not calculated"
				id: tax_label
				halign: "left"
				valign: "middle"
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Labor: not calculated"
				id: labor_label
				halign: "left"
				valign: "middle"
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Discount: 0"
				id: discount_label
				halign: "left"
				valign: "middle"
				color: root.gray_color
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Shipping: 0"
				id: shipping_label
				halign: "left"
				valign: "middle"
				color: root.gray_color
		GridLayout:
			cols:1
			padding: [self.pad_left, self.pad_top, self.pad_right, self.pad_bottom_output_window]
			Label:
				text: "Total: not calculated"
				id: total_label
				halign: "left"
				valign: "middle"
		GridLayout:
			cols:1
			padding: [self.pad_left, dp(15), self.pad_right, dp(20)]
			size_hint_y: None
			height: dp(122)
			Button:
				text: "<< Back"
				on_press: 
					app.root.current = "input"
					root.manager.transition.direction = "right"