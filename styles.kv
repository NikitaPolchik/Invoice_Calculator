<Label>
    font_size: 32
    color: [0,0,0,1]

<Button>
    font_size: 60
    padding: 10
    color: [1,1,1,1]
    background_normal: ""
    background_down: ""
    background_color: [0.3, 0.3, 0.3]

<ToggleButton>
    text: u"\u2713"
    font_name: "arial-unicode-ms.ttf"
    font_size: 60
    padding: 10
    color: [1,1,1,1]
    background_normal: ""
    background_down: ""
    background_color: [0.3, 0.3, 0.3]

<StylesLayout>

    canvas:
        Color:
            rgba: [.98, .98, .98, 1]
        Rectangle:
            size: self.size
            pos: self.pos
    

    GridLayout:
        cols:1
        size: root.width, root.height
        padding: 15
        spacing: 15

        TextInput:
            hint_text:'Enter the price:'
            halign: 'center'
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            input_type: 'number'
            font_size: 32
            id: main_price
            multiline: False
            focus: True

        GridLayout:
            cols: 2
            size: root.width, root.height
            Label:
                text: "Repeat customer:"
                size_hint: root.width, root.height
            ToggleButton:
                id: repeat_customer_button
                on_press: root.change_repeat_customer_button_state()
                size_hint: 150, root.height
        
        GridLayout:
            cols: 2
            size: root.width, root.height
            Label:
                text: "Shipping:"
                size_hint: root.width, root.height
            ToggleButton:
                id: shipping_button
                size_hint: 150, root.height
                on_press: root.change_shipping_button_state()


        GridLayout:
            cols:4
            size: root.width, root.height
            Label:
                text: "How many parts?"
                size_hint: root.width, root.height
            ToggleButton:
                text: "1"
                id: one_part_button
                group: "parts_buttons"
                size_hint: 100, root.height
                on_press: root.change_parts_button_state()
            ToggleButton:
                text: "2"
                id: two_parts_button
                group: "parts_buttons"
                size_hint: 100, root.height
                on_press: root.change_parts_button_state()
            ToggleButton:
                text: "3"
                id: three_parts_button
                group: "parts_buttons"
                size_hint: 100, root.height
                on_press: root.change_parts_button_state()
        
        GridLayout:
            cols:2
            size: root.width, root.height
            Label:
                text:"Two workers required?"
                size_hint: root.width, root.height
            ToggleButton:
                id: workers_button
                size_hint: 150, root.height
                on_press: root.change_worker_button_state()
        Button:
            text: "Submit"
            id: submit_button
            on_press: root.submit()