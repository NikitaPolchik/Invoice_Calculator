<Label>
    font_size: 32
    color: [0,0,0,1]

<Button>
    id: default_button_color
    font_size: 32
    padding: 10
    color: [1,1,1,1]
    background_normal: ""
    background_down: ""
    background_color: [0.3, 0.3, 0.3]

<StylesLayout>

    canvas:
        Color:
            rgba: [250/255, 250/255, 250/255, 1]
        Rectangle:
            size: self.size
            pos: self.pos
    

    GridLayout:
        cols:1
        size: root.width, root.height
        padding: 25
        spacing: 15

        TextInput:
            hint_text:"Enter the price:"
            halign: 'center'
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            font_size: 32
            id: main_price
            multiline: False
            focus: True

        Label:
            text: "Repeat customer?"
            color: [0, 1, 0, 1]
            canvas.before:
                Color:
                    rgba: [.5, .5, .5, 1]
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(5)]
        GridLayout:
            cols: 2
            size: root.width, root.height
            Button:
                text: "Yes"
                id: yes_customer_button
                on_press: root.change_repeat_customer_button_color("yes")
            Button:
                text: "No"
                id: no_customer_button
                on_press: root.change_repeat_customer_button_color("no")

        Label:
            text: "How many parts?"
        GridLayout:
            cols: 3
            size: root.width, root.height
            Button:
                text: "1"
                id: one_part_button
                on_press: root.change_parts_button_color("1")
            Button:
                text: "2"
                id: two_parts_button
                on_press: root.change_parts_button_color("2")
            Button:
                text: "3"
                id: three_parts_button
                on_press: root.change_parts_button_color("3")
        
        Label:
            text:"Two workers required?"
        GridLayout:
            cols:2
            size: root.width, root.height
            Button:
                text: "Yes"
                id: yes_workers_button
                on_press: root.change_workers_button_color("yes")
            Button:
                text: "No"
                id: no_workers_button
                on_press: root.change_workers_button_color("no")
        Button:
            text: "Submit"
            on_press: root.submit()
            id: submit_button